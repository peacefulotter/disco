{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "src",
        "rootDir": "..",
        "rootDirs": [
            "./src", 
            // "../../discojs-core", 
            "../gpt-tfjs"
        ],
        "outDir": "./dist",
        "types": [
            "node",
        ],
        "paths": {
            // "@epfml/discojs-core": ["../discojs-core/src/index.node"],
            "@epfml/gpt-tfjs": ["../gpt-tfjs"]
        },
        "typeRoots": ["node_modules/@types", "node_modules/bun-types", "../discojs-core/types"]

    },
    "include": [
        "**/*.ts", 
        // "../discojs-core/**/*.ts", 
        "../gpt-tfjs/**/*.ts"
    ],
    "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
