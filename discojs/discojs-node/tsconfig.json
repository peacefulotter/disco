{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "..",
        "rootDirs": ["./src", "../discojs-core", "../gpt-tfjs"],
        "outDir": "./dist",
        "paths": {
            "@epfml/discojs-core": ["../discojs-core/src/index.node"],
            "@epfml/discojs-core/*": ["../discojs-core/src/*"],
            "@epfml/gpt-tfjs": ["../gpt-tfjs"]
        },
        "typeRoots": ["./node_modules/@types", "../discojs-core/types"]
    },
    "include": [
        "src/**/*.ts",
        "../discojs-core/src/**/*.ts",
        "../gpt-tfjs/**/*.ts"
    ],
    "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
